<form action="/figures" method="POST">
    <label><h4>Name</h4></label>
        <input type="text" id="figure_name" name="figure[name]">

        <label><h4>Titles</h4></label>
            <% Title.all.each do |title|%>
                <label><%= title.name %></label>
                <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%= title.id %>">
            <% end %><br>

        <label>Create New Title:</label>
        <input type="text" id="new_title" name="title[name]"><br>

        <label><h4>Landmark</h4></label>
    <% Landmark.all.each do |landmark| %>
      <label><%= landmark.name %></label>
      <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%= landmark.id %>"><br>
            <% end %><br>

        <label>Create New Landmark:</label><br>
        <label>Name:</label>
        <input type="text" name="landmark[name]" id="new_landmark"><br>
        <label>Year:</label>
        <input type="text" name="landmark[year_completed]"><br>
        <br>
        <input type="submit" value="Create New Figure">
</form>